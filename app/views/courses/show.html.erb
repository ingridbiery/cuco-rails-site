<% provide(:title, @course.title) %>

<p>
  <h2><%= @course.title %></h2>
</p>

<p>
  <strong>Short Title:</strong>
  <%= @course.short_title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Minimum Age:</strong>
  <%= @course.min_age %>
</p>

<p>
  <strong>Maximum Age:</strong>
  <%= @course.max_age %>
</p>

<p>
  <strong>Age Limits Firm?:</strong>
  <%= @course.age_firm %>
</p>

<p>
  <strong>Minimum Number of Students:</strong>
  <%= @course.min_students %>
</p>

<p>
  <strong>Maximum Number of Students:</strong>
  <%= @course.max_students %>
</p>

<p>
  <strong>Course Fee:</strong>
  <% if @course.fee and @course.fee != 0 %>
    <%= number_to_currency(@course.fee, precision: 0) %>
  <% else %>
    FREE
  <% end %>
</p>

<p>
  <strong>Supplies:</strong>
  <%= @course.supplies %>
</p>

<p>
  <strong>Room Requirements:</strong>
  <%= @course.room_reqs %>
</p>

<p>
  <strong>Time Requirements:</strong>
  <%= @course.time_reqs %>
</p>

<p>
  <strong>Drop-Ins?:</strong>
  <%= @course.drop_ins %>
</p>

<p>
  <strong>Additional Information:</strong>
  <%= @course.additional_info %>
</p>

<p>
  <strong>Room:</strong>
  <% if !@course.room.nil? %>
    <%= @course.room.name %>
  <% else %>
    not yet assigned
  <% end %>
</p>

<p>
  <strong>Period:</strong>
  <% if !@course.period.nil? %>
    <%= @course.period.name %>
  <% else %>
    not yet assigned
  <% end %>
</p>

<hr />

<h3>Students in Course</h3>

<%= link_to 'Edit', edit_cuco_session_course_path %> |
<%= link_to "Back to #{@cuco_session.name} Session", cuco_session_path(@cuco_session) %>
