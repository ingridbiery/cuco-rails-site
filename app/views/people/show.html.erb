<h1><%= @person.first_name %> <%= @person.last_name %></h1>
<br /><div style="font-size: 2em;"><%= @family.name %> Family</div><br />

<p>
  <strong>Birthday</strong>
  <%= @person.dob %>
</p>

<p>
  <strong>Preferred Pronouns:</strong>
  <% if @person.pronoun_id %>
    <%= @person.preferred_pronouns %>
  <% else %>
    <div id="error_explanation">PLEASE EDIT TO SELECT PRONOUN PREFERENCE</div>
  <% end %>
</p>

<p>
  <strong>Email:</strong>
  <%= @person.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= number_to_phone(@person.phone, area_code: true) %>
</p>

<p>
  <strong>Social Media:</strong>
  <%= @person.social_media %>
</p>

<p>
  <strong>Created:</strong>
  <%= @person.created_at %>
</p>

<%= link_to 'Edit', edit_family_person_path(@family, @person) %> |
<%= link_to 'Back to Family', family_path(@family) %>
