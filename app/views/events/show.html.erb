<% event = @event %>

<%= content_for :page_title, event.name %>

<%= render 'event', event: @event %>

<% if current_user&.can? :edit, :event and event.event_type.display_name == "Other" %>
  <%= link_to 'Edit', edit_event_path, title: "Edit #{event.name}" %> |
<% end %>

<% if current_user&.can? :destroy, :event and event.event_type.display_name == "Other" %>
  <%= link_to 'Delete', event_path, 
              method: :delete, data: { 
              confirm: "You are deleting the #{event.name.upcase} event.\n" +
              "Are you sure you want to do this?" } %> |
<% end %>

<%= link_to 'Back', :back %>