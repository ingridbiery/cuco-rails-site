<%= form_for [@family, @person] do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if primary_exists == "" or primary_exists == "#{@person.first_name} #{@person.last_name}" %>
    <div class="field">
      <%= f.label :primary_adult %>:
      <%= f.check_box :primary_adult %>
    </div>
  <% else %>
    <div class="field">
    The <strong>Primary Adult</strong> is <strong><%= primary_exists %></strong>.
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label "Birthday" %><br>
    <%= f.date_select :dob %>
  </div>
  <div class="field">
    <%= f.collection_select :pronoun_id, Pronoun.all, :id, :pronouns,
        include_blank: "Choose Preferred Pronouns" %> <br />
    <%= link_to "Click to add your own pronouns.", new_pronoun_path %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
