<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!-- Code needed for IE versions 9 or less -->
    <%= render 'layouts/shim' %>

  </head>

  <body>
    <!-- Code for header on all pages -->
    <%= render 'layouts/header' %>

    <!-- Body of each page -->
    <div class="container">
      <%= yield %>
    </div>
    
    <!-- Code for footer on all pages -->
    <%= render 'layouts/footer' %>
  </body>

</html>    

