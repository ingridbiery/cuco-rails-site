<% fees = @family_schedule.fees %>
<% fees_due = fees.round(2) + Membership.electronic_payment_fee(fees).round(2) %>
<% paypal_url = "https://www.paypal.me/columbusunschoolers" + "/%.2f" % fees_due %>

<p><strong>Fees:</strong> <%= "$%.2f" % fees.round(2) %>
<% if fees != 0 %>
  | <strong>Electronic Payment Fee:</strong> <%= "$%.2f" % Membership.electronic_payment_fee(fees).round(2) %>
  | <strong>Total:</strong> <%= "$%.2f" % fees_due %>
  <em>(<%= link_to "PayPal to fees@columbusunschoolers.com", paypal_url %>)</em>
<% end %>
</p>

<strong>Volunteering:</strong> <%= @family_schedule.jobs %>
| <strong>Unassigned:</strong> <%= @family_schedule.unassigned %>

<% last_period_id = -1 %>
<% signups.sort_by {|signup| [signup.course.period.start_time,
                              signup.person.name]}.each do |signup| %>
  <% if signup.course.period.id != last_period_id %>
    <div class="period"><%= signup.course.period.name %> (<%= signup.course.period.duration_text %>)</div>
    <% last_period_id = signup.course.period.id %><br />
  <% end %>
  <span class="person"><%= signup.person.name %></span><br />
  <span class="course"><%= link_to signup.course.name, [@family_schedule.cuco_session, signup.course] %></span><br />
  <span class="role"><%= signup.course_role.name.titleize %></span><br /><br />
<% end %>
