<% unless signup.course_role.is_student? %>
  <div class="role">(<%= signup.course_role.name.titleize %>)</div>
<% end %>

<% # If course name is Free Play or Not at Co-op, don't show room. %>
<% unless signup.course.is_vols? | signup.course.is_away? %>
  <div class="room"><%= signup.course.rooms.map{|room| room.name.titleize}.join(", ") %></div>
<% end %>
