<% fees = @membership.family_fees %>

<tr>
  <% if fees != 0 %>
    <td style="width: 33%;"><%= link_to @membership.family.name, family_path(@membership.family.id) %></td>
    <td style="width: 22%;"><%= "$%.2f" % fees.round(2) %></td>
    <td style="width: 22%;"><%= "$%.2f" % Membership.electronic_payment_fee(fees).round(2) %></td>
    <td style="width: 22%;"><%= "$%.2f" % (fees.round(2) + Membership.electronic_payment_fee(fees).round(2)) %></td>
  <% end %>
</tr>