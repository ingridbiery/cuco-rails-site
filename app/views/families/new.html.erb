<%= content_for :page_title, "Add New Family" %>

<h1>New Family</h1>

<%= form_for(@family) do |f| %>
  <% if @family.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@family.errors.count, "error") %> prohibited this family from being saved:</h2>

      <ul>
      <% @family.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Family Info</h2>
  <%= render 'family_form', f: f %>
  <hr />
  <h2>Your Info</h2>
  <p><em>This will add you to the system as a person in your family.<br />
         We use names to make nametags, so use a name you prefer.<br />
         To edit your information in the future, click 'edit' next to your name in
         your family list.</em></p>
  <%= render 'person_form_for_new_family', f: f %>
  <hr />
  <h2>Emergency Contact Info</h2>
  <p><em>This should be someone who is not regularly attending CUCO.</em></p>
  <%= render 'emergency_form', f: f %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', families_path %>
