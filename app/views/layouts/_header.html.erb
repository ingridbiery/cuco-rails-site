<header class="navbar navbar-default.navbar-static-top navbar-inverse">
  <div class="container">
    <%= link_to "CUCO", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      	<% unless user_signed_in? %>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
      	<li><%= link_to 'Home', root_path %></li>
	      <li><%= link_to 'Calendar', calendar_path %></li>
	      <li><%= link_to 'FAQ', page_path("faq") %></li>
	      <li><%= link_to 'Expectations', page_path("expectations") %></li>
	      <li><%= link_to 'A Day at CUCO', page_path("dayatcuco") %></li>


        <!-- Borrowed from https://codepen.io/cristina-silva/pen/NNOodj/ -->
	      <% if user_signed_in? %>
          <li class="nav-item nav-item-dropdown">
            <a class="dropdown-trigger" href="#">Member Menu</a>
            <ul class="dropdown-menu">

            <li class="dropdown-menu-item"><%= link_to 'My Info', user_path(current_user) %></li>

            <% if current_user.can? :index, :families %>

              <li class="dropdown-menu-item">
                <%= link_to 'Families', families_path %>
              </li>

              <% if current_user.can? :index, UsersController %>
                <li class="dropdown-menu-item">
                  <%= link_to 'Users', users_path %>
                </li>
              <% end %>

              <li class="dropdown-menu-item">
                <%= link_to 'Pronouns', pronouns_path %>
              </li>

              <% if current_user.can? :edit, PeriodsController %>
                <li class="dropdown-menu-item">
                  <%= link_to 'Periods', periods_path %>
                </li>
              <% end %>

              <% if current_user.can? :edit, RoomsController %>
                <li class="dropdown-menu-item">
                  <%= link_to 'Rooms', rooms_path %>
                </li>
              <% end %>

              <% if current_user.can? :index, EventTypesController %>
                <li class="dropdown-menu-item">
                  <%= link_to 'Event Types', event_types_path %>
                </li>
              <% end %>
              
    	        <% if current_user.can? :index, CucoSessionsController %>
                <li class="dropdown-menu-item">
                  <%= link_to 'Sessions', cuco_sessions_path %>
                </li>
              <% end %>
              
    	        <% if current_user.can? :new, CucoSessionsController %>
                <li class="dropdown-menu-item">
                  <%= link_to 'New Session', new_cuco_session_path %>
                </li>
              <% end %>

            <% end %>

            <li class="dropdown-menu-item logout-background"><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>

            </ul>
          </li>

        <% else %>

          <li><%= link_to 'Log in', new_user_session_path %></li>

        <% end %>
        
      </ul>
    </nav>

    <span id="welcome"><% if user_signed_in? %>
      Welcome <br /> <%= current_user.name %>
    <% end %></span>
  </div>
  
  <% if @current_session_info %>
    <div id="notice"><%= @current_session_info %></div>
  <% end %>
  <% if @next_session_info %>
    <div id="notice"><%= @next_session_info %></div>
    <% if @membership_signup_info %>
      <div id="notice"><%= @membership_signup_info %>
      <% if @next_cuco_session.full? # this information was already included in the next session info %>
        <% if !user_signed_in? %>
          <%= link_to "Sign up", new_user_registration_path %> or
          <%= link_to "log in", new_user_session_path %> and edit your user info
        <% else %>
          Edit <% link_to "your user info", user_path(current_user) %>
        <% end %>
        to be sure you're on our notification list for reminders about future sessions.
      <% else # !@next_cuco_session.full? %>
        <% if !current_user&.person %>
          Enter or finish entering your <%= link_to 'family information', user_path(current_user) %> to be able to sign up
        <% elsif current_user&.person&.family&.cuco_sessions.include? @next_cuco_session %>
          You are already a member of this session
        <% else %>
          <%= link_to "Sign up for membership", new_cuco_session_membership_path(@next_cuco_session) %>
        <% end %>
      <% end # @next_cuco_session.full? %>
      </div>
    <% end # @membership_signup_info %>
  <% end # next_session_info.nil? %>
</header>
