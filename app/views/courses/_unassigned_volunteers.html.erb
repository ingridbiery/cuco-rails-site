<% if @show_unassigned %>
  <h3>Unassigned Volunteers
    <% if @course.cuco_session.course_offerings_open? or
          @course.cuco_session.course_signups_open? or
          current_user&.can? :manage_all, :course_signups %>
      <%= link_to image_tag('add.png'), new_cuco_session_course_course_signup_path(@cuco_session, @course, type: :unassigned_volunteer), title: "Add Person to Course" %>
    <% end %>
  </h3>
  <ul><% @course.unassigned_volunteer_signups.sort_by {|signup| [signup.person.last_name, signup.person.first_name]}.each do |course_signup| %>
    <% person = course_signup.person %>
    <li><%= person.name %>
      <% if (@course.cuco_session.course_signups_open? and
            @people.include? person) or
            current_user&.can? :manage_all, :course_signups %>
        <%= link_to image_tag('delete.png'), cuco_session_course_course_signup_path(@cuco_session, @course, course_signup), method: :delete,
              data: { confirm: 'Are you sure?' }, title: "Delete #{person.name}" %>
      <% end %>
    </li>
  <% end %></ul>
<% end %>
