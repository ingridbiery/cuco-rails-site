<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <th></th>
      <% Period.find_each do |period| %>
        <th><%= period.name %></th>
      <% end %>
    </tr>

    <% family_signups_by_person.each do |person_id, signups| %>

    <tr>
      <td>
        <%= Person.find(person_id).name %>
        <% unless Person.find(person_id).adult? %>
          (<%= Person.find(person_id).age_on family_schedule.cuco_session.start_date %>)
        <% end %>
      </td>

      <% Period.find_each do |period| %>

        <td>
          <% signups.select {|signup| signup.course.period_id == period.id}.each do |signup| %>
            <%= link_to signup.course.short_name, [family_schedule.cuco_session, signup.course] %><% if !signup.is_student? %><br /><em><%= signup.course_role.name.titleize %></em><% end %>
          <% end %>
        </td>

      <% end %>
    </tr>
    <% end %>
  </table>
</div>