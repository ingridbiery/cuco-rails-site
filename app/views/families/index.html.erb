<%= content_for :page_title, "Families" %>

<p id="notice"><%= notice %></p>

<h3>Total Number of Families: <%= @families.count %><br />
<%= link_to "Add New Family", new_family_path %> <%= link_to image_tag('add.png'), new_family_path, title: "Add New Family" %></h3>

<h1>Listing Families</h1>

<%= will_paginate %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Family name</th>
        <th>Street address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Phone</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @families %>
    </tbody>
   </table>
</div>

<%= will_paginate %>
