<tr>
  <% if current_user&.can? :manage_all, :family %>
    <td><%= link_to family.name, family %></td>
  <% else %>
    <td><%= family.name %></td>
  <% end %>
  <td><%= family.street_address %></td>
  <td><%= family.city %></td>
  <td><%= family.state %></td>
  <td><%= family.zip %></td>
  <td><%= number_to_phone(family.phone, area_code: true) %></td>
  <td><%= family.text %></td>
  <% if current_user&.can? :manage_all, :family %>
    <td><%= link_to image_tag('wrench.png'), edit_family_path(family), title: "Edit #{family.name}" %></td>
    <td><%= link_to image_tag('delete.png'), family, method: :delete, data: { confirm: "Are you sure? (#{family.name})" },
        title: "Delete #{family.name}" %></td>
  <% end %>
</tr>