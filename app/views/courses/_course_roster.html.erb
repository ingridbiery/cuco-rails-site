<h3><%= link_to course.name, [@cuco_session, course] %></h3>
  Room: <em><%= course.rooms.map{|room| room.name.titleize}.join(", ") %></em>;
  Ages: <em><%= course.min_age %> - <%= course.max_age %></em>;
  Ages Firm? <em><%= course.age_firm %></em>;
  Fee: <em><%= course.fee %></em>;
  Drop In? <em><%= course.drop_ins %></em><br />
  <% if current_user&.can? :show_students, :courses %>
    <% if course.student_signups.count != 0 %>
      Students:<ol>
        <% course.student_signups.includes(:person).order('people.last_name', 'people.first_name').each do |course_signup| %>
          <li><%= course_signup.person.name %></li>
        <% end %>
      </ol>
    <% end %>
    <% if course.waiting_list_signups.count != 0 %>
      Waiting List:<ol>
        <% course.waiting_list_signups.order(:created_at).each do |course_signup| %>
          <li><%= course_signup.person.name %></li>
        <% end %>
      </ol>
    <% end %>
    <% if course.volunteer_signups.count != 0 %>
      Volunteers:<ul>
        <% course.volunteer_signups.includes(:course_role).order('course_roles.display_weight').each do |course_signup| %>
          <li><%= course_signup.course_role.name.titleize %>: <%= course_signup&.person&.name %></li>
        <% end %>
      </ul>
    <% end %>
    <% if course.people_in_room_signups.count != 0 %>
      People In Room:<ul>
        <% course.people_in_room_signups.includes(:person).order('people.last_name', 'people.first_name').each do |course_signup| %>
          <li><%= course_signup.person.name %></li>
        <% end %>
      </ul>
    <% end %>
    <% if course.unassigned_volunteer_signups.count != 0 %>
      Unassigned Volunteers<ul>
        <% course.unassigned_volunteer_signups.includes(:person).order('people.last_name', 'people.first_name').each do |course_signup| %>
          <li><%= course_signup.person.name %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>